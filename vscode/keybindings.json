[
  // ------------------------------------------------------------
  // #検索
  // ------------------------------------------------------------

  // ファイルに移動
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
  },
  // エクスプローラーを表示
  {
    "key": "ctrl+a",
    "command": "workbench.view.explorer",
    "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
  },
  // 検索を表示
  {
  "key": "ctrl+g",
  "command": "workbench.view.search",
  "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
 } ,
  // ソース管理を表示
  {
    "key": "ctrl+h",
    "command": "workbench.view.scm",
    "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
  },
  // 拡張機能を表示
  {
    "key": "ctrl+x",
    "command": "workbench.view.extensions",
    "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
  },

  // ------------------------------------------------------------
  // #フォーカス移動
  // ------------------------------------------------------------

  // 最初のエディターグループにフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "sideBarFocus || panelFocus"
  },
  // サイドバー内にフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusSideBar",
    "when": "sideBarVisible && editorFocus && neovim.mode == normal || sideBarVisible && panelFocus"
  },
  // パネル内にフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusPanel",
    "when": "activePanel && editorFocus && neovim.mode == normal"
  },

  // ------------------------------------------------------------
  // #閉じる操作
  // ------------------------------------------------------------

  // サイドバーを閉じる
  {
    "key": "ctrl+q",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus"
  },
  {
    "key": "q",
    "command": "workbench.action.closeSidebar",
    "when": "editorFocus && neovim.mode == normal"
  },
  // パネルを閉じる
  {
    "key": "ctrl+q",
    "command": "workbench.action.closePanel",
    "when": "panelFocus || editorFocus && neovim.mode == normal"
  },
  {
    "key": "ctrl+q",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminalFocus"
  },

  // ------------------------------------------------------------
  // #エディター
  // ------------------------------------------------------------

  // 最初のエディターにフォーカス
  {
    "key": "b f",
    "command": "workbench.action.firstEditorInGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 最後のエディターにフォーカス
  {
    "key": "b l",
    "command": "workbench.action.lastEditorInGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 前のエディターにフォーカス
  {
    "key": "8",
    "command": "workbench.action.previousEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 次のエディターにフォーカス
  {
    "key": "9",
    "command": "workbench.action.nextEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 現在のエディターを閉じる
  {
    "key": "b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // エディターを右に分割
  {
    "key": "ctrl+w v",
    "command": "workbench.action.splitEditorRight",
    "when": "editorFocus && neovim.mode == normal"
  },
  // エディターを下に分割
  {
    "key": "ctrl+w s",
    "command": "workbench.action.splitEditorDown",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 分割したエディターを閉じる
  {
    "key": "ctrl+w q",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 右のエディターグループにフォーカス
  {
    "key": "ctrl+w l",
    "command": "workbench.action.focusRightGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 下のエディターグループにフォーカス
  {
    "key": "ctrl+w j",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 左のエディターグループにフォーカス
  {
    "key": "ctrl+w h",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 上のエディターグループにフォーカス
  {
    "key": "ctrl+w k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorFocus && neovim.mode == normal"
  },

  // ------------------------------------------------------------
  // #ファイル操作
  // ------------------------------------------------------------

  // 新しいファイル
  {
    "key": "ctrl+n",
    "command": "extension.advancedNewFile",
    "when": "editorFocus && neovim.mode == normal"
  },

  // ファイルパスの変更
  {
    "key": "ctrl+m",
    "command": "fileutils.moveFile",
    "when": "editorFocus && neovim.mode == normal"
  },

  // ファイルの複製
  {
    "key": "ctrl+c",
    "command": "fileutils.duplicateFile",
    "when": "editorFocus && neovim.mode == normal"
  },

  // ファイルの削除
  {
    "key": "ctrl+d",
    "command": "fileutils.removeFile",
    "when": "editorFocus && neovim.mode == normal"
  },

  // ------------------------------------------------------------
  // #エクスプローラー
  // ------------------------------------------------------------

  // エクスプローラーからファイルを開く
  {
    "key": "Enter",
    "command": "list.select",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでの新しいファイル
  {
    "key": "ctrl+t",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでの新しいフォルダー
  {
    "key": "ctrl+a",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでのファイル名の変更
  {
    "key": "ctrl+m",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでのフォルダーまたはファイルの削除
  {
    "key": "ctrl+d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },

  // ------------------------------------------------------------
  // #統合ターミナル
  // ------------------------------------------------------------

  // 統合ターミナルを表示
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
  },
  // 新しい統合ターミナルの作成
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  // 前のターミナルにフォーカス
  {
    "key": "cmd+8",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // 次のターミナルにフォーカス
  {
    "key": "cmd+9",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  // アクティブなターミナルインスタンスを強制終了
  {
    "key": "ctrl+d",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  // ------------------------------------------------------------
  // #問題
  // ------------------------------------------------------------

  // 問題の切り替え
  {
    "key": "ctrl+l",
    "command": "workbench.actions.view.problems",
    "when": "neovim.mode == normal && !sideBarFocus && !panelFocus"
  }
]