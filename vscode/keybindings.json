[
  // ------------------------------------------------------------
  // #検索
  // ------------------------------------------------------------

  // ファイルに移動
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "neovim.mode == normal"
  },
  // エクスプローラーを表示
  {
    "key": "ctrl+a",
    "command": "workbench.view.explorer",
    "when": "neovim.mode == normal"
  },
  // 検索を表示
  {
  "key": "ctrl+g",
  "command": "workbench.view.search",
  "when": "neovim.mode == normal"
  },
  // ソース管理を表示
  {
    "key": "ctrl+h",
    "command": "workbench.view.scm",
    "when": "neovim.mode == normal"
  },
  // 拡張機能を表示
  {
    "key": "ctrl+x",
    "command": "workbench.view.extensions",
    "when": "neovim.mode == normal"
  },

  // ------------------------------------------------------------
  // #フォーカス移動
  // ------------------------------------------------------------

  // 最初のエディターグループにフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "sideBarFocus || panelFocus"
  },
  // サイドバー内にフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusSideBar",
    "when": "sideBarVisible && editorFocus && neovim.mode == normal || sideBarVisible && panelFocus"
  },
  // パネル内にフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusPanel",
    "when": "activePanel && editorFocus && neovim.mode == normal"
  },

  // ------------------------------------------------------------
  // #閉じる操作
  // ------------------------------------------------------------

  // サイドバーを閉じる
  {
    "key": "ctrl+q",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus"
  },
  {
    "key": "q",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus || editorFocus && neovim.mode == normal"
  },
  // パネルを閉じる
  {
    "key": "ctrl+q",
    "command": "workbench.action.closePanel",
    "when": "panelFocus || editorFocus && neovim.mode == normal"
  },
  {
    "key": "ctrl+q",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminalFocus"
  },

  // ------------------------------------------------------------
  // #エディター
  // ------------------------------------------------------------

  // 最初のエディターにフォーカス
  {
    "key": "b f",
    "command": "workbench.action.firstEditorInGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 最後のエディターにフォーカス
  {
    "key": "b l",
    "command": "workbench.action.lastEditorInGroup",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 前のエディターにフォーカス
  {
    "key": "8",
    "command": "workbench.action.previousEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 次のエディターにフォーカス
  {
    "key": "9",
    "command": "workbench.action.nextEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 現在のエディターを閉じる
  {
    "key": "b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorFocus && neovim.mode == normal"
  },
  // エディターを右に分割
  {
    "key": "ctrl+w v",
    "command": "workbench.action.splitEditorRight",
    "when": "editorFocus && neovim.mode == normal"
  },
  // エディターを下に分割
  {
    "key": "ctrl+w s",
    "command": "workbench.action.splitEditorDown",
    "when": "editorFocus && neovim.mode == normal"
  },
  // 分割したエディターを閉じる
  {
    "key": "ctrl+w q",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorFocus && neovim.mode == normal"
  },

  // ------------------------------------------------------------
  // #エクスプローラー
  // ------------------------------------------------------------

  // エクスプローラーからファイルを開く
  {
    "key": "Enter",
    "command": "list.select",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでの新しいファイル
  {
    "key": "m n",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでの新しいフォルダー
  {
    "key": "m a",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでのファイル名の変更
  {
    "key": "m m",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでのフォルダーまたはファイルの削除
  {
    "key": "m d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },

  // ------------------------------------------------------------
  // #統合ターミナル
  // ------------------------------------------------------------

  // 統合ターミナルを表示
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "neovim.mode == normal"
  },
  // 新しい統合ターミナルの作成
  {
    "key": "ctrl+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  // 前のターミナルにフォーカス
  {
    "key": "8",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // 次のターミナルにフォーカス
  {
    "key": "9",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  // アクティブなターミナルインスタンスを強制終了
  {
    "key": "ctrl+d",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },

  // ------------------------------------------------------------
  // #問題
  // ------------------------------------------------------------

  // 問題の切り替え
  {
    "key": "ctrl+l",
    "command": "workbench.actions.view.problems",
    "when": "neovim.mode == normal"
  }
]