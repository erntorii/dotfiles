[
  // ------------------------------------------------------------
  // #検索
  // ------------------------------------------------------------

  // ファイルに移動
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "editorFocus && vim.mode == 'Normal'"
  },

  // ------------------------------------------------------------
  // #フォーカス移動
  // ------------------------------------------------------------

  // 最初のエディターグループにフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusFirstEditorGroup",
    "when": "sideBarFocus || panelFocus"
  },
  // サイドバー内にフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusSideBar",
    "when": "sideBarVisible && editorFocus && vim.mode == 'Normal' || sideBarVisible && panelFocus"
  },
  // パネル内にフォーカス
  {
    "key": "ctrl+w ctrl+w",
    "command": "workbench.action.focusPanel",
    "when": "activePanel && editorFocus && vim.mode == 'Normal'"
  },

  // ------------------------------------------------------------
  // #閉じる操作
  // ------------------------------------------------------------

  // サイドバーを閉じる
  {
    "key": "ctrl+q",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus"
  },
  {
    "key": "q",
    "command": "workbench.action.closeSidebar",
    "when": "sideBarFocus || editorFocus && vim.mode == 'Normal'"
  },
  // パネルを閉じる
  {
    "key": "ctrl+q",
    "command": "workbench.action.closePanel",
    "when": "panelFocus || editorFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+q",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminalFocus"
  },

  // ------------------------------------------------------------
  // #エディター
  // ------------------------------------------------------------

  // 前のエディターにフォーカス
  {
    "key": "8",
    "command": "workbench.action.previousEditor",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  // 次のエディターにフォーカス
  {
    "key": "9",
    "command": "workbench.action.nextEditor",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  // 現在のエディターを閉じる
  {
    "key": "b d",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorFocus && vim.mode == 'Normal'"
  },

  // ------------------------------------------------------------
  // #エクスプローラー
  // ------------------------------------------------------------

  // エクスプローラーを表示
  {
    "key": "ctrl+a",
    "command": "workbench.view.explorer",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  // エクスプローラーからファイルを開く
  {
    "key": "Enter",
    "command": "list.select",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでの新しいファイル
  {
    "key": "m n",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでの新しいフォルダー
  {
    "key": "m a",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでのファイル名の変更
  {
    "key": "m m",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },
  // エクスプローラーでのフォルダーまたはファイルの削除
  {
    "key": "m d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus"
  },

  // ------------------------------------------------------------
  // #統合ターミナル
  // ------------------------------------------------------------

  // 統合ターミナルを表示
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "!terminalFocus"
  },
  // 新しい統合ターミナルの作成
  {
    "key": "ctrl+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  // 前のターミナルにフォーカス
  {
    "key": "8",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // 次のターミナルにフォーカス
  {
    "key": "9",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  // アクティブなターミナルインスタンスを強制終了
  {
    "key": "ctrl+d",
    "command": "workbench.action.terminal.kill",
    "when": "terminalFocus"
  },
]